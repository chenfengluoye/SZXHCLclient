<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="分析点数"
            android:textColor="#000000"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/fbl"
            android:text="4"
            android:textColor="#0B6CFF"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:textColor="#000000"
            android:text="频率序列"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/plxl"
            android:hint="[15][20]"
            android:textColor="#0B6CFF"
            android:gravity="center"
            android:textSize="25sp"
            android:cursorVisible="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:textColor="#000000"
            android:text="振幅序列"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/zfxl"
            android:hint="[80][100]"
            android:textColor="#0B6CFF"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:textColor="#000000"
            android:text="采样频率"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/cypl"
            android:hint="200"
            android:textColor="#0B6CFF"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:background="#3A6461"
            android:id="@+id/savesinset"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="保存"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cancelsinset"
            android:background="#8794AD"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="取消"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:textColor="#90050B"
            android:text="请保证频率和振幅的个数一致"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>