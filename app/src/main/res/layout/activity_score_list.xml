<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF9FCBF5"
    tools:context="com.qqjyb.user.ScoreList">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/grzy"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/stuheade2"
            android:layout_width="70dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF367FEC"
            android:layout_height="70dp" />
        <TextView
            android:id="@+id/stuname"
            android:gravity="center"
            android:textColor="#FF367FEC"
            android:textSize="20sp"
            android:text="陈开举"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/stuId"
            android:gravity="center"
            android:textColor="#FF367FEC"
            android:textSize="20sp"
            android:text="201509030203"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/bltclassname"
            android:gravity="center"
            android:textColor="#FF367FEC"
            android:textSize="20sp"
            android:text="网络1502班"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:textSize="20sp"
            android:text="实验成绩详情"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TableLayout
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TableRow
            android:gravity="center"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/zyx"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:src="@mipmap/bx5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#FF367FEC"
                    android:text="正余弦信号"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lbq"
                android:padding="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:src="@mipmap/bx1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#FF367FEC"
                    android:text="滤波器设计"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/yyxh"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:src="@mipmap/yy3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#FF367FEC"
                    android:text="语音信号分析"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:src="@mipmap/ly1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#FF367FEC"
                    android:text="留言"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/tzjtq"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/tz3" />

                <TextView
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#FF367FEC"
                    android:text="调制解调系统"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_weight="1">
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/dpxt"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:src="@mipmap/dp1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#FF367FEC"
                    android:text="倒频系统设计"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </TableRow>
    </TableLayout>
</LinearLayout>
