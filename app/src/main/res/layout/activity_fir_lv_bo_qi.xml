<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:background="#3B99FF"
        app:layout_heightPercent="12%h"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/yssy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#5679FF"
            android:text="原始时域"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/yspy"
            android:textColor="#ffffff"
            android:background="#00000000"
            android:text="原始频域"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/mdsy"
            android:textColor="#ffffff"
            android:background="#00000000"
            android:text="滤波时域"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/mdpy"
            android:textColor="#ffffff"
            android:background="#00000000"
            android:text="滤波频域"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="上传数据到服务器"
            android:textColor="#ffffff" />
    </LinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/srctimearea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.qqjyb.szxhcl.DrawView
            android:id="@+id/srctime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3B99FF"
            app:layout_heightPercent="15%h">

            <Button
                android:id="@+id/xhset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:text="信号源"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:text="产生信号"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/srctimexl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:text="信号序列"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/wingraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:text="窗型图"
                android:textColor="#ffffff"
                android:visibility="gone" />

            <Button
                android:id="@+id/xinnengbiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:text="性能表"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/design"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:text="设计"
                android:textColor="#ffffff" />
        </LinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:visibility="gone"
        android:id="@+id/srcratearea"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.qqjyb.szxhcl.DrawView
            android:id="@+id/srcrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            app:layout_heightPercent="15%h"
            android:background="#3B99FF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/xhset1"
                android:text="信号源"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_weight="1"
                android:id="@+id/analyse"
                android:text="FFT分析"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/srcratexl"
                android:text="详细结果"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/design1"
                android:text="设计滤波器"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:visibility="gone"
        android:id="@+id/destimearea"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.qqjyb.szxhcl.DrawView
            android:id="@+id/destime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            app:layout_heightPercent="15%h"
            android:background="#3B99FF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/xhset2"
                android:text="信号源"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/apply1"
                android:text="FIR过滤"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/destimexl"
                android:text="过滤结果"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:visibility="gone"
                android:id="@+id/wingraph1"
                android:text="窗型图"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/design2"
                android:text="设计"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:visibility="gone"
        android:id="@+id/desratearea"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.qqjyb.szxhcl.DrawView

            android:id="@+id/desrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            app:layout_heightPercent="15%h"
            android:background="#3B99FF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/xhset3"
                android:text="信号源"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_weight="1"
                android:id="@+id/analyse1"
                android:text="FFT分析"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/desratexl"
                android:text="详细结果"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/design3"
                android:text="设计滤波器"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>
